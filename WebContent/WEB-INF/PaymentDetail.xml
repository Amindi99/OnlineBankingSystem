<?xml version="1.0" encoding="UTF-8"?>

 <web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0"
>
    <!-- Configure here. -->
          
    <servlet>
		<servlet-name>BillShowServlet</servlet-name>
		<servlet-class>com.customer.BillShowServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>BillShowServlet</servlet-name>
		<url-pattern>/BillShowServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
    	<servlet-name>PaymentInsertServlet</servlet-name>
    	<servlet-class>com.customer.PaymentInsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>PaymentInsertServlet</servlet-name>
    	<url-pattern>/PaymentInsertServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>UpdatePaymentServlet</servlet-name>
    	<servlet-class>com.customer.UpdatePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>UpdatePaymentServlet</servlet-name>
    	<url-pattern>/UpdatePaymentServlet</url-pattern>
    </servlet-mapping>
	
	 <servlet>
    	<servlet-name>DeletePaymentServlet</servlet-name>
    	<servlet-class>com.customer.DeletePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>DeletePaymentServlet</servlet-name>
    	<url-pattern>/DeletePaymentServlet</url-pattern>
    </servlet-mapping>
	

</web-app>	